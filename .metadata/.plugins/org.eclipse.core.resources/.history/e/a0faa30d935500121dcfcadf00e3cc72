from sets import Set
import common
import os

class IDTranser:
    def __init__(self, dir):
        self.set = Set()
        self._dir = dir
    
    def load(self):
        self._dir = dir
        files = os.listdir(dir)
        for f in files:
            path = os.path.join(self._dir, f)
            f = open(path)
            content = f.read()
            yield content
            f.close()
    
    def parse(self, lines):
        for c in self.load(dir):
            lines = c.split('\n')
            for l in lines:
                if common.canfind(l, ':'): continue
                # the line contains user
     