from sets import Set
import os

class IDTranser:
    def __init__(self, dir):
        self.set = Set()
        self._dir = dir
    
    def load(self):
        self._dir = dir
        files = os.listdir(dir)
        for f in files:
            path = os.path.join(self._dir, f)
            f = open(path)
            lines = f.readlines()
            yield lines
            f.close()
    
    def parse(self, lines):
